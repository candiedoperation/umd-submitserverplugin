@Override
    public void before(@NotNull List<? extends VFileEvent> events) {
        /* This event is triggered everytime any file changes in any project open in IDE */
        if (currentProject != null) {
            /* .submit, Submit Server File Exists */
            boolean submitFileExists = false;

            /*
                Get Project File Index to Check if file trigger is for current project,
                https://plugins.jetbrains.com/docs/intellij/project.html#checking-if-a-file-belongs-to-a-project
            */

            ProjectFileIndex pFileIndex =
                    ProjectRootManager.getInstance(currentProject).getFileIndex();

            /* Iterate through all File Events */
            Iterator<? extends VFileEvent> vfe_iter = events.iterator();
            while (vfe_iter.hasNext() && !submitFileExists) {
                VFileEvent event = vfe_iter.next();
                VirtualFile eventFile = event.getFile();
                System.out.println(eventFile);
                if (eventFile != null && pFileIndex.isInProject(eventFile)) {
                    /* Current Project's Files have been updated, Find .submit */
                    Collection<VirtualFile> matchedFiles =
                            FilenameIndex.getVirtualFilesByName(
                                    ".submit",
                                    GlobalSearchScope.projectScope(currentProject)
                            );

                    /* If .submit Exists, Enable the Submit Option */
                    actionEnabled = (!matchedFiles.isEmpty());
                }
            }
        }
    }